	month = may,
	year = {2014},
	note = {Number: 5
Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {\textit{Staphylococcus epidermidis}, biofilm, \textit{icaADBC} operon, nosocomial infections},
	pages = {4619--4633},
	file = {Full Text PDF:files/21/Wojtyczka et al. - 2014 - Biofilm Formation and Antimicrobial Susceptibility.pdf:application/pdf},
