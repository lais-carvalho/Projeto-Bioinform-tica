@article{zhao_comprehensive_2021,
	title = {Comprehensive {Succinylome} {Profiling} {Reveals} the {Pivotal} {Role} of {Lysine} {Succinylation} in {Energy} {Metabolism} and {Quorum} {Sensing} of {Staphylococcus} epidermidis},
